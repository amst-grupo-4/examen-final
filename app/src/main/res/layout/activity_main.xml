<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-120dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Aplicaciones moviles y servicios telematicos"
            android:textSize="30dip">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Examen Practico"
            android:textSize="25dip">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            android:gravity="center"
            android:text="Miguel Bailon - Ma. Eugenia Carrillo - David Mendoza"
            android:textSize="25dip">

        </TextView>

        <EditText
            android:id="@+id/heroeInsertar"

            android:hint="@string/hint"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:textSize="20dip"
            android:layout_marginHorizontal="40dp"
            android:gravity="center" />

        <Button
            android:id="@+id/botonBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="irSugerencias"
            android:text="Buscar Heroes"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="40dp"
            android:textSize="15dip"
            >

        </Button>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>